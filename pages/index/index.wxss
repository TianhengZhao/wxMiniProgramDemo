.banner {
  width: 100%;
  height: 295rpx;
}
.banner swiper {  /*swiper是有固定高度的 150px*/
  height: 100%;
  width: 100%;
}
.banner image {
  width: 100%;
  height: 295rpx;
}
.opCon {
  display: flex;
  padding: 20rpx 0;
  flex-wrap: nowrap;
  /* white-space: nowrap;  当不用flex时，用这种方法*/ 
}
.opNav {
  text-align: center;
  width: 168rpx;
  flex-shrink: 0;
  display: inline-block;
}
.opNav image {
  width: 100rpx;
  height: 100rpx;
}
.txt {
  font-size: 26rpx;
}
.classify {
  background: #f0f3f8;
  padding-top: 40rpx;
  padding-bottom: 40rpx;
}
.claMain {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}
.claMain .box {  /*外层盒子设宽高 里面img宽高100%即可*/
  width: 320rpx;
  height: 320rpx;
  margin-bottom: 30rpx;
  position: relative;
}
.claMain .pic {
  width: 100%;
  height: 100%;
}
.claMain .layer {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.4);
  position: absolute;    /*阴影和图片重合*/
  top: 0;
  left: 0;
  color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  text-align: center;   /*下面3行样式使得 拼音太长两侧还有空间距 且居中 */
  padding: 0 20rpx;
  box-sizing: border-box;
}
.claMain .layer .claTitle {
  font-size: 34rpx;
}
.claMain .layer .line {    /*画直线*/
  width: 60rpx;
  height: 2rpx;
  background: #fff;
  margin: 10rpx 0;
}
.claMain .layer .claDes {
  opacity: 0.6;
  text-transform: uppercase;   /*字母转为大写*/
  font-size: 24rpx;
  letter-spacing: 5rpx;  /*字符间距*/
}
.recomm {
  padding-top: 40rpx;
  padding-bottom: 20rpx;
}
.recItem {
  display: flex;
  height: 290rpx;
  padding: 15rpx 0;
  border-bottom: 1rpx dotted rgb(117, 117, 117);
}
.recItem .pic {
  width: 200rpx;
  height: 280rpx;
}
.recItem .pic image{
  width: 100%;
  height: 100%;
}
.recItem .txt {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left: 40rpx;
  padding-top: 10rpx;
}
.recItem .txt .name {
  font-size: 34rpx;
}
.recItem .txt .author {
  color: #666;
  font-size: 26rpx;
}

